{
  "name": "Small Youtube Player",
  "version": "1.0",
  "description":
    "Extension to get a small youtube player on scroll like on mobile",
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": ["https://www.youtube.com/watch?v=*"],
      "js": ["script.js"],
      "css": ["style.css"]
    }
  ],
  "manifest_version": 2
}
